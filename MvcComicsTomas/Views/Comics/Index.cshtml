@model List<Comic>


<h2 class="text-center my-4">Comics SQL</h2>

<p>
    <a asp-controller="Comics"
       asp-action="Create">
        Crear un nuevo Comic
    </a>
</p>
<div class="container">
    <div class="row">
        @foreach (var comic in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@comic.Imagen" class="card-img-top" alt="@comic.Nombre">
                    <div class="card-body">
                        <h5 class="card-title">@comic.Nombre</h5>
                        <p class="card-text">@comic.Descripcion</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>