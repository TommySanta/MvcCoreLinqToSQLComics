@model List<Doctor>

@{
	List<string> especialidades = ViewData["ESPECIALIDADES"] as List<string>;
}

<h1>Lista Doctores</h1>
<form method="post">
	<label>Especialidades: </label>
	<select name="especialidad" class="form-control">
		@foreach (string especialidad in especialidades)
		{
			<option value="@especialidad">@especialidad</option>
		}
	</select>
	<button class="btn btn-info">
		Buscar Doctores
	</button>
</form>

<table class="table table-bordered table-dark">
	<thead>
		<tr>
			<th>Apellido</th>
			<th>Especialidad</th>
			<th>Salario</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var doctor in Model)
		{
			<tr>
				<td>@doctor.Apellido</td>
				<td>@doctor.Especialidad</td>
				<td>@doctor.Salario</td>
				<td>
					<a asp-controller="Doctores"
					   asp-action="Edit"
					   asp-route-id="@doctor.DoctorNo"
					   class="btn btn-info">
						Edit
					</a>
					<a asp-controller="Doctores"
					   asp-action="Delete"
					   asp-route-inscripcion="@doctor.DoctorNo"
					   class="btn btn-info">
						Delete
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
